<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ReadMode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Map custom attributes to color resources -->
        <item name="backgroundPrimary">@color/background_primary</item>
        <item name="surfaceElevated">@color/surface_elevated</item>
        <item name="appBarColor">@color/app_bar</item>
        <item name="textPrimary">@color/text_primary</item>
        <item name="textSecondary">@color/text_secondary</item>
        <item name="colorOnPrimary">@color/color_on_primary</item>

        <item name="buttonStartColor">@color/button_start</item>
        <item name="buttonStopColor">@color/button_stop</item>
        <item name="buttonCustomColor">@color/button_custom_color</item>

        <item name="bannerBackground">@color/banner_background</item>
        <item name="spinnerBackground">@color/spinner_bg</item>
        <item name="containerBorder">@color/container_border</item>
    </style>

    <style name="AlertDialogCustom" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/dialog_positive</item>
        <item name="android:textColorSecondary">@color/dialog_negative</item>
        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButton.Negative</item>
    </style>

    <style name="AlertDialogButton.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_positive</item>
    </style>

    <style name="AlertDialogButton.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_negative</item>
    </style>
</resources>
