<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGround"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Banner -->
        <TextView
            android:id="@+id/readModeBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/banner_background"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/app_name"
            android:textColor="@color/colorOnPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Label -->
        <TextView
            android:id="@+id/labelColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/select_color"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <!-- Spinner -->
        <Spinner
            android:id="@+id/colorSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:spinnerMode="dropdown" />

        <!-- Intensity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/colorLevelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/intensity"
                android:textColor="@color/textPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/colorLevelPercentageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color_intensity"
                android:textColor="@color/textPrimary"
                android:textStyle="bold" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/colorLevelBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50" />


        <!-- Brightness -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/brightnessLevelText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="@string/brightness"
                android:textColor="@color/textPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/brightnessLevelPercentageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brightness_level"
                android:textColor="@color/textPrimary"
                android:textStyle="bold" />

        </LinearLayout>

        <SeekBar
            android:id="@+id/brightnessLevelBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="50" />

        <!-- Start Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/gray_disabled"
            android:text="@string/start"
            android:textColor="@color/colorOnPrimary"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
